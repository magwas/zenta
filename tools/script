#!/bin/bash
set -xe
apt update
apt install -y python-dev python-pip
pip install vnc2flv
export DISPLAY=:0
Xvnc :0&
mkdir -p ./org.rulez.magwas.zenta.integrationtests/generated-images
mkdir -p ~/.m2
cp toolchains.xml ~/.m2
cp sonar-settings.xml ~/.m2/settings.xml
git checkout $(git rev-parse HEAD)
branch=$(echo $BRANCH|sed 'sA/A-Ag')
dch --force-distribution -D $branch -v 1.0-1.$branch.$BUILD_NUMBER commit $(git rev-parse HEAD)
git add --all :/
git commit -m  "debian build"
make recording
debuild -us -uc
git checkout $BRANCH
